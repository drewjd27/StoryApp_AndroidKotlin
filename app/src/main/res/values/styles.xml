        <item name="android:fontFamily">@font/poppinslight</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="regular">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="medium">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="bold">
        <item name="android:fontFamily">@font/poppinsbold</item>
